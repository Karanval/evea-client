<div class="has-text-centered">
  <h3 class="title"><span>Crear Tarea</span></h3>
  <div class="tile is-parent centered">
    <form action="">
      <div class="box">
        <p class="help is-danger">
          {{message}}
        </p>
        <div class="field">
          <label class="label">Nombre de la tarea</label>
          <div class="control has-icons-left">
            {{input class="input" value=name type="text" required=true}}
            <span class="icon is-small is-left">
              <i class="fas fa-user"></i>
            </span>
          </div>
        </div>
        
