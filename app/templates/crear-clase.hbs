<div class="has-text-centered">
  <h3 class="title"><span>Crear Clase</span></h3>
  <div class="tile is-parent centered">
    <form action="">
      <div class="box">
        <p class="help is-danger">{{message}}</p>
        <div class="field">
          <label class="label">Nombre de la Clase *</label>
          <div class="control has-icons-left">
            {{input class="input" value=className type="text" required=true}}
            <span class="icon is-small is-left">
              {{fa-icon "book"}}
            </span>
          </div>
        </div>
        
        <div class="field">
          <label class="label">Objetivos de la Clase</label>
          <div class="control has-icons-left">
            {{input class="input" value=objectives type="text" required=true}}
            <span class="icon is-small is-left">
              {{fa-icon "bullseye"}}
            </span>
          </div>
        </div>

        <div class="field">
          <label class="label">Descripcion de la clase</label>
          <div class="control has-icons-left">
            {{input class="input" value=description type="text" required=true}}
            <span class="icon is-small is-left">
              {{fa-icon "book-open"}}
            </span>
          </div>
        </div>

        <div class="field">
          <label class="label">Docente</label>
          <div class="control has-icons-left">
            {{input class="input" value=professor type="text" required=true}}
            <span class="icon is-small is-left">
              {{fa-icon "user"}}
            </span>
          </div>
        </div>

        <div class="align-center">
          <button id="crearClaseButton" {{action "crearClase"}} class="button is-primary">
            <span>CREAR CLASE</span>
          </button>
          <hr>
        </div>
      </div>
    </form>
  </div>
</div>